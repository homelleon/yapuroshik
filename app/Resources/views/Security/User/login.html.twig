{# AppBundle:Security:User:login.html.twig
==============================================
-----Template for users' authorisation------ #}

{% extends ':Blog/Page:nonews.html.twig' %}

{% block text %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="form">
        <div class="form__row">
            Введите логин и пароль для входа!
        </div>
        <div class="form__row">
            <form action="{{ path('login') }}" method="post">
                <div class="inner__block inner__block_orange">
                    <label for="username">Username:</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" />
                </div>
                <div class="inner__block inner__block_orange">
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="_password" />
                </div>        
                {#<input type="hidden" name="_target_path" value="/account" />   #}     
                {#<input type="hidden" name="_failure_path" value="login" />#}
                <button class="button button_orange" type="submit">подтвердить</button>
            </form>
        </div>
    </div>
{% endblock %}
