{# AppBundle namespace #}
    
{% extends "base.html.twig" %}

{% block login %}
    <div class="login">
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <div class="inner-orange">
                {{ app.user.username }}
            </div>
        {% else %}
            {% if is_granted('IS_AUTHENTICATED_ANONYMOUSLY') %}
                <a href="{{ path('login') }}">
                    <div class="button inner-orange">авторизоваться</div>
                </a>
            <a href="{{ path('login') }}">
                <div class="button inner-orange">зарегестрироваться</div>
            </a>
            {% endif %}
        {% endif %}
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <a href="{{ path('logout') }}">
                <div class="button inner-orange">выйти</div>
            </a>
        {% endif %}
    </div>
{% endblock %}
  