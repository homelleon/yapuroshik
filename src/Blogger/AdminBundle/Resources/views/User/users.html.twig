        <a href="{{ path("admin") }}">Назад</a>
    </p>
    <a href="{{ path("admin_users_create") }}"><div>+</div></a>
    <hr>
    {% for user in users %}        
        <a href="{{ path("user", {username: user.username}) }}">
            {{ user.username }}
            {{ user.role.name }}
        </a>
        <hr>
    {% endfor %}
{% endblock %}

