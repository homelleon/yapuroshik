{# --Blogger:AdminBundle:Admin:roles.html.twig--
================================================
Template to show list of all roles in data base#}

{% extends "AdminBundle::base.html.twig" %}

{% block content %}
    <p>
        <a href="{{ path("admin") }}">Назад</a>
    </p>
    <hr>
    <a href="{{ path("roles_create") }}">
        <div>+</div>
    </a>
    {% for role in roles %}        
        <a href="{{ path("role", {name: role.name}) }}">
            {{ role.name }}
            {{ role.role }}
        </a>
        <hr>
    {% endfor %}
{% endblock %}

{% block admin_side %}
    Roles side
{% endblock %}
