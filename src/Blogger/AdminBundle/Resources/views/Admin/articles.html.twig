{# Blogger:AdminBundle:Admin namespace #}

{% extends "AdminBundle::base.html.twig" %}

{% block content %}
    <p>
        <a href="{{ path("admin") }}">Назад</a>
    </p>
    <hr>
    {% for article in articles %}
        {% if article.isDeleted %}
            <s>
        {% endif %}
        <a href="{{ path("show_news", {id: article.id}) }}">
            {{ article.title }}
            {{ article.author }}
        </a>
        {% if article.isDeleted %}
            </s>
        {% endif %}
        <hr>
    {% endfor %}
{% endblock %}

{% block admin_side %}
    Articles side
{% endblock %}
